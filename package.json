{
  "name": "echo",
  "version": "2.1.0",
  "description": "A tool that redfines your web experience, making complex online tasks way easier",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:lib": "rollup --config rollup.lib.config.js && cp package.lib.json dist-lib/package.json",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "exit 0",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.19.1",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.4.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "accname": "^1.1.0",
    "construct-style-sheets-polyfill": "3.1.0",
    "formik": "^2.4.6",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "openai": "^4.77.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.3.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-textarea-autosize": "^8.5.4",
    "react-use": "^17.6.0",
    "tailwindcss": "^3.4.15",
    "webextension-polyfill": "0.12.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.2.2",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-typescript": "12.1.1",
    "@testing-library/react": "16.1.0",
    "@types/chrome": "0.0.283",
    "@types/dom-speech-recognition": "^0.0.4",
    "@types/jest": "29.5.14",
    "@types/lodash": "^4.17.14",
    "@types/node": "22.7.7",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/ws": "8.5.13",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "^10.4.20",
    "chokidar": "4.0.3",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.3",
    "eslint-plugin-react-hooks": "5.1.0",
    "fs-extra": "11.3.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.10",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.41",
    "prettier": "3.2.5",
    "rollup": "4.30.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "sass": "1.83.1",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "tslib": "2.8.1",
    "typescript": "5.7.3",
    "vite": "5.4.0",
    "ws": "8.18.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.0"
}